---
import Layout from '@/layouts/PageLayout.astro';
import HeroText from '@/components/widgets/HeroText.astro';
import ContactUs from '@/components/widgets/Contact.astro';

const metadata = {
  title: 'Register'
};
---

<Layout metadata={metadata}>
  <span slot="announcement"></span>
  <span slot="hero"></span>
  <HeroText tagline="Register" title="Register as an attendee" />
  <ContactUs
    id="form"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name'
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email'
      }
    ]}
    textarea={{
      label: 'Message'
    }}
    disclaimer={{
      label:
        'By submitting this form, you acknowledge and agree to the collection of your personal information.'
    }}
    description="You will receive a confirmation email shortly after checkout"
  />
</Layout>

---
import type { ScheduleEvent } from '#/data/schedule';

interface Props {
  event: ScheduleEvent;
  locale?: Intl.UnicodeBCP47LocaleIdentifier;
  leftOffset?: number;
  width?: number;
}

const {
  event,
  locale = 'en-EN',
  leftOffset = 0,
  width = 100
} = Astro.props;

const categoryColors = {
  conference_1: '#3498db',
  conference_2: '#1982c4',
  demos: '#3f7cab',
  default: '#757bc8',
  forum_1: '#8ac926',
  forum_2: '#ff595e',
  forum_3: '#6a4c93',
  keynote: '#9b59b6',
  lunch: '#f39c12',
  social: '#2ecc71',
  workshop: '#e67e22'
};

function formatTime(time: Date): string {
  return time.toLocaleTimeString(locale, {
    hour: '2-digit',
    minute: '2-digit',
    hour12: false
  });
}

const endTime = event.end ?? new Date(event.start.getTime() + 60 * 60 * 1000);
const startHour = event.start.getHours();
const startMinute = event.start.getMinutes();
const duration = (endTime.getTime() - event.start.getTime()) / (60 * 60 * 1000);
const topPosition = (startHour - 8) * 60 + startMinute;
const height = Math.max(duration * 60, 30);
const bgColor = categoryColors[event.category] || categoryColors.default;
---

<div
  class="absolute z-10 min-h-[30px] cursor-pointer overflow-hidden rounded-md px-3 py-2 transition-all duration-200 hover:z-20 hover:transform md:px-1.5 md:py-1 hover:shadow-lg hover:-translate-y-0.5"
  style={{
    top: `${topPosition}px`,
    height: `${height}px`,
    left: `${leftOffset}%`,
    width: `${width}%`,
    backgroundColor: `${bgColor}15`,
    borderLeft: `4px solid ${bgColor}`
  }}
>
  <div class="mb-1 text-[11px] text-gray-700 font-semibold opacity-80 lg:text-[10px] md:text-[9px]">{formatTime(event.start)} - {formatTime(endTime)}</div>
  <div class="mb-1 text-[13px] text-gray-800 font-semibold leading-tight lg:text-xs md:text-[11px]">{event.title}</div>
  {event.location && <div class="mb-1 flex items-center gap-0.5 text-[11px] text-gray-600 lg:text-[10px] md:text-[9px]">üìç {event.location}</div>}
  {event.description && <div class="line-clamp-2 text-[11px] text-gray-600 leading-tight lg:text-[10px] md:text-[9px]">{event.description}</div>}
</div>

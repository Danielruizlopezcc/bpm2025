---
import Button from '#/components/ui/Button/Button.astro';
import CallToAction from '#/components/widgets/CallToAction.astro';
import Layout from '#/layouts/Layout.astro';
import { getHomePermalink } from '#/utils/permalinks';
---

<Layout metadata={{ title: '✔️ Payment confirmed' }}>
  <section class="h-full flex items-center p-16">
    <div class="container mx-auto my-8 flex flex-col items-center justify-center px-5">
      <div class="max-w-md text-center">
        <h2 class="mb-8 text-9xl font-bold">
          <span>🎉</span>
        </h2>
        <p class="text-3xl">Your payment has been confirmed</p>
        <br />
        <br />
        <br />
        <p class="text-xl font-semibold">We look forward to seeing you in Seville!</p>
      </div>
      <Button
        class="ml-4 mt-4"
        variant="primary"
        href={getHomePermalink()}
        icon="i-mdi:home"
        text="Go to homepage" />
    </div>
  </section>
  <CallToAction
    title="Don't have a place to stay yet?"
    subtitle="Book in the same place where the conference takes place!"
    actions={[
      {
        href: 'https://sites.melia.com/en/events/melia-sevilla/CONGRESO-BPM-AGOSTO-2025.html?author=true',
        icon: 'i-mdi:chevron-right',
        text: 'Book room in Meliá Sevilla'
      }
    ]} />
</Layout>
